<h1>Articles</h1>
<div class="content">
  <% if allow? 'articles', 'new' %>
    <%= link_to "Create new article", new_article_path %>
  <% end %>
</div>

<div id="articles">
  <%= will_paginate @products, previous_label: h("<"), next_label: h(">") %>
  <% @articles.each do |article| %>
    <h2>
      <%= link_to article.name, article %>
    </h2>
    <div class="info">
      by <%= article.author_name %>
      on <%= article.published_at.strftime('%b %d, %Y') %>
    </div>
    <div class="content">
  	  <%= link_to 'Show article', article %>
      <% if allow? 'articles', 'destroy', article %>
       | <%= link_to 'Delete', article_path(article), method: :delete, confirm: "Are you sure?" %>
      <% end %>
      <% if allow? 'articles', 'edit', article %>
       | <%= link_to 'Edit', edit_article_path(article) %>
      <% end %>
    </div>
  <% end %>
  <%= will_paginate @products, previous_label: h("<"), next_label: h(">") %>
</div>
