<h1>Articles</h1>
<div class="content">
  <%= link_to "Create new article", new_article_path %>
</div>

<div id="articles">
<% @articles.each do |article| %>
  <h2>
    <%= link_to article.name, article %>
  </h2>
  <div class="info">
    by <%= article.author_name %>
    on <%= article.published_at.strftime('%b %d, %Y') %>
  </div>
  <div class="content">
	  <%= link_to 'Show article', article %> |
    <%= link_to 'Delete', article_path(article), method: :delete, confirm: "Are you sure?" %> |
    <%= link_to 'Edit', edit_article_path(article) %>
  </div>
<% end %>
</div>
